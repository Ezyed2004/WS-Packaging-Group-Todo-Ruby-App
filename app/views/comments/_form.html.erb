<%= form_with(model: [ @task, @task.comments.build ]) do |form| %>
  <div class="form-group">
      Name: <%= current_user.email.split('@').first %>
      <%= form.hidden_field :name, :value => current_user.email.split('@').first, :disabled => true, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= form.label :body %><br>
      <%= form.text_area :body, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit class: 'btn btn-primary', value: 'Post Comment' %>
  </div>
<% end %>